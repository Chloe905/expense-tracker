<div class=" container d-flex flex-column align-items-center mt-5 ">
  {{!-- category dropdown --}}
  <div class="col-6 text-center">
    <form action="/">
      <select class="form-select text-center" aria-label="category select" name="category" id="category"
        onchange="this.form.submit()">
        <option value="類別" disabled selected>選擇類別</option>
        <option value="家居物業" {{#ifCond category "家居物業" }} selected {{/ifCond}}>家居物業</option>
        <option value="交通出行" {{#ifCond category "交通出行" }} selected {{/ifCond}}>交通出行</option>
        <option value="休閒娛樂" {{#ifCond category "休閒娛樂" }} selected {{/ifCond }}>休閒娛樂</option>
        <option value="餐飲食品" {{#ifCond category "餐飲食品" }} selected {{/ifCond}}>餐飲食品</option>
        <option value="其他" {{#ifCond category "其他" }} selected {{/ifCond}}>其他</option>
      </select>

    </form>
  </div>

  <div class=" col-6 mt-4 row">
    <h6 class="col-4">總金額 : </h6>
    <h2 class="col-6" style="color: #C96C4B;">{{totalAmount}}</h2>
  </div>

  <div class="col-8 mt-3">
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item list-group-item-dark mb-1">
        <div class="row d-flex align-items-center">
          <div class="col-2 text-center">
            <i class="{{this.icon}}"></i>
          </div>
          <div class="col-5 d-flex flex-column">
            <h5 style="vertical-align: middle;display:inline">{{this.name}}</h5>
            <div style="font-size: 0.5em;">{{this.date}}</div>
          </div>
          <div class="col-2">{{this.amount}}</div>
          <div class="col-3">
            <a class="btn rounded-circle border border-1" href="./records/{{this._id}}/edit">
              <i class="fa-solid fa-pen" style="color:#AD8EBD;"></i>
            </a>
            <form action="./records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn rounded-circle border border-1" type="submit"
                onclick="return confirm(`確定要刪除${this.name}?`)"><i class="fa-solid fa-trash" style="color:#C96C4B;"></i>
              </button>
            </form>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>

  <div class="col-6 mt-3 text-center">
    <a class="btn btn-sm btn-outline-secondary mb-3 " href="/records/new">+</a>
  </div>

</div>